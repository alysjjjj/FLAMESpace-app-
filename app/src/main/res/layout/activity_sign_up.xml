<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#697B54"
    tools:context=".Sign_up">

    <androidx.cardview.widget.CardView
        android:layout_width="360dp"
        android:layout_height="621dp"
        android:layout_marginTop="110dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/stud"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="-140dp"
            android:autofillHints=""
            android:background="#D9D9D9"
            android:ems="10"
            android:hint="Email Address"
            android:inputType="textPassword"
            android:padding="15dp"
            tools:ignore="TouchTargetSizeCheck" />


        <EditText
            android:id="@+id/editTextTextEmailAddress2"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="-230dp"
            android:background="#D9D9D9"
            android:ems="10"
            android:hint="Name"
            android:inputType="text"
            android:padding="15dp"
            android:textColor="@color/black"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/homi"
            android:layout_width="220dp"
            android:layout_height="63dp"
            android:layout_gravity="center"
            android:layout_marginTop="120dp"
            android:backgroundTint="#697B54"
            android:text="SIGN UP"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="28dp"
            android:text="Name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="120dp"
            android:text="Email Address"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/te"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="210dp"
            android:text="Student Number"
            android:textSize="18sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/editTextTed"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="-50dp"
            android:autofillHints="Student Number"
            android:background="#D9D9D9"
            android:ems="10"
            android:hint="Student Number"
            android:inputType="number"
            android:padding="15dp"
            tools:ignore="TouchTargetSizeCheck" />


        <TextView
            android:id="@+id/tre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="300dp"
            android:text="Password"
            android:textSize="18sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/editTerxtTed"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:autofillHints="Student Number"
            android:background="#D9D9D9"
            android:ems="10"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:padding="15dp"
            tools:ignore="TouchTargetSizeCheck" />


    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/back"
        android:layout_width="95dp"
        android:layout_height="68dp"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="15dp"
        android:contentDescription="@string/todooo"
        android:src="@drawable/back" />
</FrameLayout>